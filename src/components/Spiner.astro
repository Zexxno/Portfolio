<div id="spinner" class="fixed inset-0 bg-white flex items-center justify-center z-50 transition-transform duration-500 transform translate-y-0">
    <div class="relative h-16 w-16">
        <div class="absolute inset-0 animate-spin rounded-full h-16 w-16 border-4 border-t-transparent border-[#ffd97b]"></div>
    </div>
</div>

<script>
    window.addEventListener('load', () => {
        const spinner = document.getElementById('spinner');
        setTimeout(() => {
            if (spinner) {
                spinner.classList.add('opacity-0');
                setTimeout(() => {
                    spinner.style.display = 'none';
                }, 500);
            }
        }, 300);
    });
</script>
<style>
    #spinner {
        transition: opacity 0.5s ease;
    }
</style>